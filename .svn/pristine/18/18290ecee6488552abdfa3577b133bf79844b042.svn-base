<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >





    <RelativeLayout
        android:id="@+id/act_panel1"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true" >

        <LinearLayout
            android:id="@+id/act_photo"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/tile_bg"
            android:orientation="vertical" >
        </LinearLayout>

        <TextView
            android:id="@+id/act_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/act_photo"
            android:layout_marginLeft="14dp"
            android:layout_marginTop="14dp"
            android:layout_toRightOf="@+id/act_photo"
            android:text="活动名称"
            android:textAppearance="?android:attr/textAppearanceLarge" />

        <TextView
            android:id="@+id/act_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/act_name"
            android:layout_below="@+id/act_name"
            android:text="时间"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <TextView
            android:id="@+id/act_location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/act_date"
            android:layout_below="@+id/act_date"
            android:text="地点"
            android:textAppearance="?android:attr/textAppearanceMedium" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/relativeLayout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="120dp" >

        <TextView
            android:id="@+id/act_org"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:text="组织方"
            android:textAppearance="?android:attr/textAppearanceMedium" />



        <TextView
            android:id="@+id/act_email"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/act_org"
            android:text="联系邮箱"
            android:textAppearance="?android:attr/textAppearanceMedium" />



        <TextView
            android:id="@+id/act_qq"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/act_email"
            android:text="联系QQ"
            android:textAppearance="?android:attr/textAppearanceMedium" />



        <TextView
            android:id="@+id/act_val"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/act_qq"
            android:text="活动有效期"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <TextView
            android:id="@+id/act_abstracts"
            android:layout_width="match_parent"
            android:layout_height="75dp"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/act_val"
            android:text="活动说明"
            android:textAppearance="?android:attr/textAppearanceMedium" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/act_ok"
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:layout_alignParentBottom="true" >

        <TextView
            android:id="@+id/textView9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="参加"
            android:textAppearance="?android:attr/textAppearanceLarge" />

    </RelativeLayout>

</RelativeLayout>