package barcode.android.service;

import java.util.List;

import barcode.android.model.Organization;

public interface OrganizationService {
	/**
	 * 获取热门组织列表
	 */
	public List<Organization> getHotActivities();
	
	/**
	 * 获取活动详细信息
	 */
	public Organization getOrganization();
	
	/**
	 * 参加活动
	 */
	public boolean participate();
	
	/**
	 * 签到
	 */
	public boolean sign();
	
	/**
	 * 退出
	 */
	public boolean quit();
	
	/**
	 * 收藏
	 */
	public boolean favorite();
}
